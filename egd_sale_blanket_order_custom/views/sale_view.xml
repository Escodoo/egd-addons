<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_sale_order_plan_tree">
        <field name="name">view.sale.order.plan.tree</field>
        <field name="model">sale.order.plan</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="installment" />
                <field name="plan_date" />
                <field name="order_type" />
                <field name="percent" />
                <field name="to_order" />
                <field name="ordered" />
                <field name="last" invisible="1" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_sale_order_plan_form">
        <field name="name">view.sale.order.plan.form</field>
        <field name="model">sale.order.plan</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="installment" />
                        <field name="plan_date" />
                        <field name="to_order" />
                    </group>
                    <group>
                        <field name="order_type" />
                        <field name="percent" />
                        <field name="ordered" />
                        <field name="sale_order_ids" widget="many2many_tags" />
                    </group>
                </group>
                <separator
                    string="Related orders"
                    attrs="{'invisible': [('sale_order_ids', '=', [])]}"
                />
                <field name="sale_order_ids" widget="many2many_tags" />
            </form>
        </field>
    </record>
    <record id="view_order_form_blanket_order_plan" model="ir.ui.view">
        <field name="name">view.order.form.order.plan</field>
        <field name="model">sale.blanket.order</field>
        <field name="inherit_id" ref="sale_blanket_order.view_blanket_order_form" />
        <field name="arch" type="xml">
            <xpath expr='/form/sheet/notebook' position="before">
                <div attrs="{'readonly': [('sale_count', '>', 0)]}">
                    <field name="use_order_plan" />
                    <label for="use_order_plan" />
                </div>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="before">
                <field name="ip_order_plan" invisible="1" />
                <button
                    name="%(action_view_sale_make_planned_order)d"
                    string="Create Order by Plan"
                    type="action"
                    class="btn-primary"
                    attrs="{'invisible': [('ip_order_plan', '=', False)]}"
                />
            </xpath>
            <xpath expr="/form/sheet/notebook/page" position="after">
                <page
                    string="Order Plan"
                    name="order_plan"
                    attrs="{'invisible': [('use_order_plan', '=', False)]}"
                >
                    <button
                        name="%(action_sale_create_order_plan)d"
                        string="⇒ Create Order Plan"
                        type="action"
                        class="oe_link"
                        attrs="{'invisible': ['|', ('order_plan_ids', '!=', []), ('sale_count', '>', 0)]}"
                    />
                    <button
                        name="remove_order_plan"
                        string="⇒ Remove Order Plan"
                        type="object"
                        class="oe_link"
                        attrs="{'invisible': ['|', ('order_plan_ids', '=', []), ('sale_count', '>', 0)]}"
                        confirm="Are you sure to remove this order plan?"
                    />
                    <field
                        name="order_plan_ids"
                        context="{'tree_view_ref': 'view_sale_order_plan_tree'}"
                        attrs="{'invisible': [('order_plan_ids', '=', [])], 'readonly': [('sale_count', '>', 0)]}"
                    />
                </page>
                <page string="Products" name="blanket_product">
                    <field name="egd_order_product">
                        <tree name="egd_order_product_tree" editable="bottom">
                            <field
                                name="product_id"
                                domain="[('type', 'in', ['consu'])]"
                            />
                            <field name="quantity" />
                            <field name="price_unit" />
                            <field name="subtotal" />
                            <field name="expected_date" />
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer oe_right">
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="egd_product_total" string="Total" />
                        </div>
                        <field
                            name="egd_product_total"
                            nolabel="1"
                            class="oe_subtotal_footer_separator"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                    </group>
                </page>
                <page string="Services" name="blanket_service">
                    <field name="egd_order_service">
                        <tree name="egd_order_service_tree" editable="bottom">
                            <field
                                name="product_id"
                                domain="[('type', 'in', ['service'])]"
                            />
                            <field name="quantity" />
                            <field name="price_unit" />
                            <field name="subtotal" />
                            <field name="expected_date" />
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer oe_right">
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="egd_service_total" string="Total" />
                        </div>
                        <field
                            name="egd_service_total"
                            nolabel="1"
                            class="oe_subtotal_footer_separator"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                    </group>
                </page>
            </xpath>

            <xpath expr="//field[@name='amount_total']" position="after">
                <div class="oe_subtotal_footer_separator oe_inline">
                    <label for="egd_profit" />
                </div>
                <field
                    name="egd_profit"
                    nolabel="1"
                    class="oe_subtotal_footer_separator"
                    widget="monetary"
                    options="{'currency_field': 'currency_id'}"
                />
            </xpath>
        </field>
    </record>
    <!-- Order Plan Lines -->
    <record id="view_sale_order_plan_filter" model="ir.ui.view">
        <field name="name">view.sale.order.plan.filter</field>
        <field name="model">sale.order.plan</field>
        <field name="arch" type="xml">
            <search string="Search Sales Order Plan Lines">
                <field name="partner_id" />
                <field name="sale_id" />
                <field name="installment" />
                <separator />
                <filter
                    string="Quotations"
                    name="draft"
                    domain="[('state', 'in', ('draft', 'sent'))]"
                />
                <filter
                    string="Sales Orders"
                    name="sales"
                    domain="[('state', 'in', ('sale','done'))]"
                />
                <group expand="0" string="Group By">
                    <filter
                        string="Customer"
                        name="customer"
                        domain="[]"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        string="Sales Order"
                        name="sale"
                        domain="[]"
                        context="{'group_by':'sale_id'}"
                    />
                    <filter
                        string="Installment"
                        name="install"
                        domain="[]"
                        context="{'group_by':'installment'}"
                    />
                    <filter
                        string="Status"
                        name="state"
                        domain="[]"
                        context="{'group_by':'state'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="view_sale_order_plan_tree_readonly" model="ir.ui.view">
        <field name="name">view.sale.order.plan.tree</field>
        <field name="model">sale.order.plan</field>
        <field name="arch" type="xml">
            <tree edit="0" create="0" delete="0">
                <field name="sale_id" />
                <field name="installment" />
                <field name="plan_date" />
                <field name="order_type" />
                <field name="percent" />
                <field name="to_order" />
                <field name="ordered" />
            </tree>
        </field>
    </record>
    <record id="action_sale_order_plan" model="ir.actions.act_window">
        <field name="name">Sales Order Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.plan</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_sale_order_plan_tree_readonly" />
        <field name="search_view_id" ref="view_sale_order_plan_filter" />
        <field
            name="context"
        >{'search_default_draft': 1, 'search_default_sale': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                View sales order plan lines
            </p>
            <p>
                This view show all available order plan line for reporting purposes
            </p>
        </field>
    </record>
    <menuitem
        action="action_sale_order_plan"
        id="menu_sale_order_plan"
        parent="sale.sale_order_menu"
        sequence="2"
    />
</odoo>

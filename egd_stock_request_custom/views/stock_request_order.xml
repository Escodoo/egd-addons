<odoo>

    <record model="ir.ui.view" id="stock_request_order_form_view">
        <field
            name="name"
        >stock.request.order.form (in egd_stock_request_custom)</field>
        <field name="model">stock.request.order</field>
        <field name="inherit_id" ref="stock_request.stock_request_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='items']//field[@name='stock_request_ids']//field[@name='state']"
                position="before"
            >
                <field name="egd_target_above" invisible="1" />
                <field name="egd_standard_price" optional="show" />
                <field
                    name="egd_target_value"
                    optional="show"
                    widget="badge"
                    decoration-success="egd_target_above == False"
                    decoration-danger="egd_target_above == True"
                />
            </xpath>
        </field>
    </record>


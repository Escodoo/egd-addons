<odoo>




    <record model="ir.ui.view" id="fleet_vehicle_tree_view">
        <field name="name">fleet.vehicle.tree (in egd_import_vehicle_records)</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="hour_location" />
                <field name="model_id" />
                <field name="license_plate" />
                <field name="driver_id" />
                <field name="odometer" />
                <field name="address" />
            </tree>
        </field>
    </record>

    <record id="action_view_fleet_vehicle_custom" model="ir.actions.act_window">
        <field name="name">Import records</field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="fleet_vehicle_tree_view" />
    </record>
    <menuitem
        id="menu_fleet_custom"
        name="Import records"
        parent="fleet.fleet_vehicles"
        sequence="10"
        action="action_view_fleet_vehicle_custom"
    />

</odoo>
